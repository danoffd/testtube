/*by default, the sibling dropzones should be filled with a vert line.
    might be overrridden later */
.tree-node-nav-sibling .tree-node-nav {
    background-image:url(/assets/tree2-leaf-fill.png);
    overflow:hidden;
}

/*by default, tree node command should show a leaf (no expand/collapse)
    might be changed later*/
.tree-node-command {
    background-image:url(/assets/tree2-leaf.png);
}

/*by default, the fill image should be filled (vert bar indicating continuation)
    might be hidden later*/
.tree-node-fill {
    background-image:url(/assets/tree2-leaf-fill.png);
}

/*the last node in a branch should terminate the nav image*/
.tree-node-list li:last-child .tree-node-command {
    background-image:url(/assets/tree2-leaf-last.png);
}
.tree-node-list li:last-child .tree-node-fill {
    background-image:none;
}

/*this is to prevent children of the last child from inheriting last
    child styles*/
/*.tree-node-list li:not(:last-child) .tree-node-command {
    background-image:url(/assets/tree2-leaf.png);
}
.tree-node-list li:not(:last-child) .tree-node-fill {
    background-image:url(/assets/tree2-leaf-fill.png);
}*/

/*Expanded nodes should insert the collapse button*/
.tree-node-nav.TT-expanded .tree-node-command {
    background-image:url(/assets/tree2-leaf-collapse.png) !important;
}
/*Collapsed nodes should insert the expand button*/
.tree-node-nav.TT-collapsed .tree-node-command {
    background-image:url(/assets/tree2-leaf-expand.png) !important;
}

/*The first sibling dropzone in a list has a special format to show
    that a new root has started*/
.tree-node-list li:first-child .tree-node-nav {
    background-image:url(/assets/tree2-topper.png);
    background-repeat:no-repeat;
}

